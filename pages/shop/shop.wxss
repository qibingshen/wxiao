  .nav-inner text {
    font-size: 16px; } }

.healthproduct {
  width: 100%;
  margin-bottom: 10px;
  background: #fff;
  display: flex;
  flex-direction: row; }

.h-left {
  width: 50%; }

.h-left image {
  width: 100%;
  height: 360rpx; }

.h-right {
  width: 50%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20px 14px 15px 24px; }

.wrap-hFont {
  text-align: center;
  width: 49%;
