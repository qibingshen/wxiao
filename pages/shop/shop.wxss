.container {
  background: #F3F3F3;
  padding: 0;
  display: flex;
  justify-content: flex-start; }

.my-swiper {
  width: 100%;
  height: 180px; }

.slide-image {
  width: 100%;
  height: 200px;
  border: 0; }

.nav-block {
  display: flex;
  background: #fff;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-bottom: 12px;
  margin-bottom: 10px; }

.list-item {
  text-align: center;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around; }

.nav-inner {
  width: 25%;
  padding-top: 10px;
  }

  .column-icon{
    box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center; 
  }

.nav-inner image {
  width: 100rpx;
  height: 100rpx; }

.nav-inner text {
  padding-top: 14px; }

