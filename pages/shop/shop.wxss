  .h2-name {
    font-size: 17px;
    color: #222; } }

@media screen and (max-width: 321px) {
  .h2-desc {
    font-size: 13px;
    color: #666; } }

@media screen and (min-width: 322px) and (max-width: 400px) {
  .h2-desc {
    font-size: 14px;
    color: #666; } }

@media screen and (min-width: 400px) {
  .h2-desc {
    font-size: 15px;
    color: #666; } }

.h2-left-img span {
  display: block;
  padding: 15px 10px 0 5px; }

.h2-right {
  width: 40%;
  padding: 25px 10px 0; }

.h2-right ul {
  width: 100%;
  display: flex;
  flex-direction: column; }

.h2-right ul li image {
  margin-top: 10px;
  width: 100%;
  height: 150px; }

