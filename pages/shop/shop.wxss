.h2-left-img image {
  width: 45%;
  height: 120px; }

.h2-name {
  margin-bottom: 5px; }

@media screen and (max-width: 321px) {
  .h2-name {
    font-size: 15px;
    color: #222; } }

@media screen and (min-width: 322px) and (max-width: 400px) {
  .h2-name {
    font-size: 16px;
    color: #222; } }

