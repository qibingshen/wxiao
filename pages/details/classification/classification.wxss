
.container{
    width: 100%;
    height: 100%;
    background: #f4f4f4;
    display: flex;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    box-sizing: border-box;

}
.search-pannel{
    width: 100%;
}
.search-inner{
  padding:10px 10px;
}
.search-pannel .search{
    width: 100%;
    padding: 0;
    background: #fff;
    border-radius: 5px;
    /*text-align: center;*/
    font-size: 14px;
}
.search-content{
    width: 100%;
    height: 100% !important;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}
.search-left-aside{
    width: 28%;
    border-right:1px solid #ddd;
    font-size: .7rem;
    display: flex;
    flex-direction: column;
    height: 100%;
}
.type-nav{
    position: relative;
    padding: .7rem .3rem;
    text-align: center;
    border-bottom:1px solid #ddd;
    z-index: 10px;
}
.type-nav.selected{
    margin-right: -1px;
    padding-left::-1px;
    color: #333;
    background-color: #fff;
    border-left: 2px solid #19BA98;
}
.search-right-aside{
    background: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding:5px 10px;

    /*justify-content: space-around;*/
}
.goods-detail{
   display: block;
   width: 33.333333%;
}
.goods-detail .sigle-goods{

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    justify-content: center;
    align-items: center;
    align-content: center;
    height: 240rpx;

}
.goods-detail image{
    width:80%;
    height: 120rpx;
    margin-bottom: 15px;
}
.goods-detail text{
    font-size: 14px;
    text-align:center;
}