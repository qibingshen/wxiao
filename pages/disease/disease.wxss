.disease-container {
  width: 100%;
  height: 100%; 
}
.disease-list{
	width: 100%;
	display: flex;
	flex-direction: column;
}
.disease-list-title{
	height: 140rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20px;
	background: #fff;
	position: relative;
}
.disease-list-title image{
	width: 100rpx;
	height: 100rpx;
}
.disease-list-title .disease-list-title-ud{
	width: 60rpx;
	height: 60rpx;
}
.disease-list-title text{
	text-align: left;
	position: absolute;
	left: 180rpx;
}
.disease-list-main{
	background: #f5f5f5;
	display: flex;
	flex-wrap: wrap;
	padding-top: 30px;	
}
.disease-list-image{
	width: 25%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.disease-list-image image{
	height: 120rpx;
	width: 120rpx;
}
.disease-list-image text{
	width: 100%;
	font-size: 12px;
	color: #2d2d2d;
	display: inline-block;
	text-align: center;
	line-height: 60px;
}
