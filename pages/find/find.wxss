.container {
  background: #F3F3F3;
  padding: 0;
  display: flex;
  box-sizing: border-box;
  justify-content: flex-start; 
}

.my-swiper {
  width: 100%;
  height: 180px; 
}

.slide-image {
  width: 100%;
  height: 200px;
  border: 0; 
}

.search-icon {
  width: 100%;
  margin: 7px 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0; 
}
  .search-icon .inner-icon {
    width: 60%;
    display: flex;
    flex-direction: row;
     }
    .search-icon .inner-icon image {
      width: 40%;
      height: 90px; 
    }
    .search-icon .inner-icon span {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-left: 10px;
       }
      .search-icon .inner-icon span .icon-title {
        color: #222; 
      }
      @media screen and (max-width: 321px) {
        .search-icon .inner-icon span .icon-title {
          font-size: 15px; } }
      @media screen and (min-width: 322px) and (max-width: 400px) {
        .search-icon .inner-icon span .icon-title {
          font-size: 16px; } }
      @media screen and (min-width: 400px) {
        .search-icon .inner-icon span .icon-title {
          font-size: 17px; } }
    .search-icon .inner-icon .icon-desc {
      color: #666;
      margin-top: 5px;
      font-size: 14px;
       }
   .search-nav {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  }
     .search-nav view {
      width: 50%;
      display: flex;
      flex-direction: row;
       }
       .search-nav  .wrap-box {
        display: block;
        background: #fff;
        padding: 20px 0px 20px 20px;
        margin-bottom: 3px;
        display: flex;
        flex-direction: row;
         }
        .search-nav .wrap-box image {
          width: 100rpx;
          height: 95rpx;
          margin-right: 10px;
           }
       .search-nav  .wrap-box .inner-span {
          /*display: flex;
                        flex-direction: column;
                        justify-content: center;
                        align-items: center;*/
          /*  flex-direction:column;
                        flex-wrap: nowrap;
                        justify-content: space-between;*/ }
          .search-nav  .wrap-box .inner-span .search-title {
            font-size: 15px;
            display: inline-block; 
          }
           .search-nav  .wrap-box .inner-span .search-desc {
            font-size: 13px;
            color: #666;
             }
      .search-nav  .hasgap {
        margin-right: 3px;
      }
